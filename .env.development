# =====================================
# CONFIGURACIÓN DE DESARROLLO
# =====================================
# Configuración para desarrollo local

# =====================================
# API BACKEND
# =====================================
# Backend local (puerto por defecto del backend)
VITE_API_URL=http://localhost:5050

# Habilitar modo demo (datos mock) o API real
# Controlado por archivos .env específicos del modo:
#   pnpm dev       → .env.demo  (VITE_USE_DEMO=true)
#   pnpm dev:api   → .env.api   (VITE_USE_DEMO=false)
# NO definir VITE_USE_DEMO aquí para evitar sobreescribir el modo seleccionado

# Timeout para desarrollo (10 segundos)
VITE_API_TIMEOUT=10000

# =====================================
# AUTENTICACIÓN
# =====================================
# Auto-login deshabilitado por seguridad - usar login legítimo
VITE_AUTO_LOGIN=false

# =====================================
# ENTORNO
# =====================================
VITE_ENV=development
VITE_MODE=development
VITE_DEBUG=true

# =====================================
# FEATURE FLAGS
# =====================================
VITE_FEATURE_PRODUCTS_METRICS=false
VITE_FEATURE_INLINE_EDIT=true

# =====================================
# TELEMETRÍA Y OBSERVABILIDAD
# =====================================
VITE_TELEMETRY_ENABLED=true

# =====================================
# CONFIGURACIONES AVANZADAS
# =====================================
# Prevenir problemas de cache con React 19
VITE_FORCE_OPTIMIZE_DEPS=true
VITE_DEV_SERVER_WATCH_FOLDERS=src

# =====================================
# NOTAS DE DESARROLLO
# =====================================
# - El backend debe estar corriendo en localhost:5050
# - Usa .env.local para sobrescribir estas configuraciones sin commitear
# - Cambios en .env requieren reiniciar el servidor de desarrollo (pnpm dev)
# - Para desarrollo, usa credenciales legítimas del backend

